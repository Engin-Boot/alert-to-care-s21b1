<UserControl x:Class="Frontend.ViewAllControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}">
    <ListView HorizontalAlignment="Center" VerticalAlignment="Center">
        <ListViewItem>
            <Button Content="All ICUs" Height="30" Width="100" Click="AllICUs_Selected" FontSize="16"></Button>
        </ListViewItem>
        <ListViewItem>
            <Button Content="All Beds" Height="30" Width="100" Click="AllBeds_Selected" FontSize="16"></Button>
        </ListViewItem>
        <ListViewItem>
            <Button Content="All Patients" Height="30" Width="100" Click="AllPatients_Selected" FontSize="16"></Button>
        </ListViewItem>
        <ListViewItem>
            <Button Content="Beds in ICU" Height="30" Width="100" Click="BedInICU_Selected" FontSize="16"></Button>
        </ListViewItem>
        
    </ListView>

</UserControl>
